{
    "name": "mane-haghighi-backend",
    "version": "1.0.0",
    "main": "dist/server.js",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc && npm run copy-static",
        "copy-static": "cp -r src/static dist/",
        "copy-static:win": "xcopy src\\static dist\\static /E /I",
        "db:push": "prisma db push --schema='./prisma/schema.prisma'",
        "seed": "ts-node prisma/seed.ts",
        "delete": "ts-node prisma/delete.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "@prisma/client": "^5.19.1",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "jsonwebtoken": "^9.0.2",
        "zarinpal-checkout": "^0.3.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^22.5.4",
        "@types/zarinpal-checkout": "^0.2.4",
        "prisma": "^5.19.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.6.2"
    }
}
